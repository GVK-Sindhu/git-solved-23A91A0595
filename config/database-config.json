{
  "production": {
    "connection": {
      "host": "prod-db.example.com",
      "port": 5432,
      "database": "devops_production",
      "ssl_mode": "require",
      "pool_size": 20
    },
    "backup": {
      "enabled": true,
      "schedule": "0 2 * * *",
      "retention_days": 30
    }
  },

  "development": {
    "connection": {
      "host": "localhost",
      "port": 5432,
      "database": "devops_development",
      "ssl_mode": "disable",
      "pool_size": 5
    },
    "backup": {
      "enabled": false,
      "schedule": "manual"
    },
    "features": {
      "seed_data": true,
      "debug_queries": true
    }
  },

  "experimental": {
    "enabled": false,
    "description": "Experimental distributed database setup for testing only (do not enable in production).",
    "connection": {
      "host": "cluster-db.example.com",
      "port": 5432,
      "database": "devops_experimental",
      "ssl_mode": "require",
      "distributed": true,
      "replica_count": 3,
      "pool_size": 10
    },
    "backup": {
      "enabled": true,
      "schedule": "0 1 * * *",
      "retention_days": 7
    },
    "ai_features": {
      "predictive_optimization": true,
      "anomaly_detection": true
    }
  }
}
